pipeline {
    agent any

    tools {
        terraform 'terraform'
    }	

    stages {

        stage('validar') {
            steps {
                dir("terraform-test"){
                sh 'terraform validate'
                }
            }
        }

        stage('iniciliazr') {
            steps {
                dir("terraform-test"){
                sh 'terraform init'
                }
            }
        }
        stage('lanzar') {
            steps {
                dir("terraform-test"){
                sh 'terraform apply -auto-approve'
                }
            }
        }
        stage('output') {
            steps {
                dir("terraform-test"){
                sh 'terraform output'
                }
            }
        }
    }
}
